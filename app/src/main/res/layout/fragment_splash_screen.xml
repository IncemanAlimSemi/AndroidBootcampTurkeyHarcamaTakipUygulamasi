<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".splashscreen.SplashScreenFragment"
    android:background="@color/splashScreenYellow">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView_splashScreenFragmentAnimation"
        android:layout_width="@dimen/layoutWidth_splashScreenAnimation"
        android:layout_height="@dimen/layoutHeight_splashScreenAnimation"
        app:layout_constraintBottom_toTopOf="@+id/textView_splashScreenFragmentAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splash_screen_animation" />

    <TextView
        android:id="@+id/textView_splashScreenFragmentAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_splashScreenFragmentAppName"
        android:textColor="@color/white"
        android:textSize="@dimen/size_splashScreenFragmentAppNameText"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView_splashScreenFragmentAnimation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>